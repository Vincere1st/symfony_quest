{% extends 'base.html.twig' %}

{% block body %}

    <table class="table table-hover table-dark">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>

                <th scope="row">
                    <a href="{{ path('article_show',{'id': article.id} ) }}">
                        {{ article.id }}</a>
                </th>

                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}